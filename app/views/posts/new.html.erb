<h1>New Post</h1>

<form action="/posts" method="post">
  <%# add form fields %>
  <p><label for="author_input">Author</label>
  <input type="text" name="author" id="author"></p>
  <p><label for="body_input">Body</label>
  <input type="text" name="body" id="body"></p>
  <p><label for="image_input">Image URL</label>
  <input type="text" name="image" id="image"></p>
  <button>Submit</button>
</form>
